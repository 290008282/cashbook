{
  "name": "cashbook-books",
  "description": "cashbook application by Windows Desktop",
  "version": "1.1.4",
  "main": "main.js",
  "author": {
    "name": "dingdangdog",
    "email": "dingdangdogx@outlook.com"
  },
  "i18n": {
    "locales": ["zh-CN"],
    "defaultLocale": "zh-CN"
  },
  "build": {
    "asar": false,
    "appId": "cashbook",
    "productName": "cashbook",
    "extends": null,
    "directories": {
      "output": "build"
    },
    "files": [
      "./icon.ico",
      "./main.js"
    ],
    "extraResources": [
      {
        "from": "resources/dist/",
        "to": "app/dist/"
      },
      {
        "from": "resources/config/",
        "to": "app/config/"
      },
      {
        "from": "resources/data/",
        "to": "app/data/"
      },
      {
        "from": "resources/cashbook-server.exe",
        "to": "app/cashbook-server.exe"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ]
    }
  },
  "scripts": {
    "electron": "electron .",
    "package": "electron-builder"
  },
  "devDependencies": {
    "@types/node": "^16.11.56",
    "electron": "^24.8.8",
    "electron-builder": "^23.6.0",
    "npm-run-all": "^4.1.5"
  }
}
